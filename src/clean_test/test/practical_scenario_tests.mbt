  let term_5 = @azimuth.add(first_term, @azimuth.multiply(common_diff, 4))  // ç¬¬5é¡¹ = 1 + 2*4 = 9
  assert_eq(9, term_5)
  
  // ç­‰æ¯”æ•°åˆ—ï¼š2, 4, 8, 16, 32...
  let first_geo = 2
