test "mathematical_sequence_calculation" {
  // æ•°å­¦åºåˆ—è®¡ç®—ï¼šç­‰å·®æ•°åˆ—æ±‚å’Œ
  let first_term = 3
  let common_diff = 4
  let num_terms = 7
  
  // ä½¿ç”¨å…¬å¼è®¡ç®—ç­‰å·®æ•°åˆ—å’Œï¼šS = n/2 * (2a + (n-1)d)
  let sum = divide_with_ceil(
