  let principal = 100000  // æœ¬é‡‘
  let annual_rate = 6     // å¹´åˆ©ç‡ç™¾åˆ†æ¯”
  let years = 30          // è´·æ¬¾å¹´é™
  
  // ç®€åŒ–è®¡ç®—ï¼šæœˆä¾› = (æœ¬é‡‘ + æ€»åˆ©æ¯) / æ€»æœˆæ•°ï¼Œå‘ä¸Šå–æ•´
  let total_interest = @azimuth.divide_with_ceil(@azimuth.multiply(principal, annual_rate), 100)
