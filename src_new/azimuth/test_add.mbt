// 临时测试文件，用于验证边界情况

test "test_negative_overflow_edge_case" {
  // 测试 -1073741824 + (-1073741824) = -2147483648
  // 这是精确的边界情况，应该返回最小值
  assert_eq(-2147483648, add(-1073741824, -1073741824))
  
  // 测试 -1073741824 + (-1073741823) = -2147483647
  // 这不应该溢出
  assert_eq(-2147483647, add(-1073741824, -1073741823))
  
  // 测试 -1073741823 + (-1073741824) = -2147483647
  // 这不应该溢出
  assert_eq(-2147483647, add(-1073741823, -1073741824))
  
  // 测试 -1073741823 + (-1073741823) = -2147483646
  // 这不应该溢出
  assert_eq(-2147483646, add(-1073741823, -1073741823))
}