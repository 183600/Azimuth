  assert_eq(first_attr, Some(StringValue("value0")))
  assert_eq(last_attr, Some(StringValue("value999")))
  
  // æ‰€æœ‰æ“ä½œåº”è¯¥åœ¨å¹³å°é™åˆ¶å†…æˆåŠŸå®Œæˆ
  assert_true(true)
}