  }
  
  // æµ‹è¯•UInt64éšæœºæ•°ç”Ÿæˆçš„å¹³å°å…¼å®¹æ€§
  let u64_values = [
    Random::next_u64(random),
    Random::next_u64(random),
    Random::next_u64(random),
    Random::next_u64(random),
    Random::next_u64(random)
  ]
  
  // éªŒè¯æ‰€æœ‰å€¼éƒ½æ˜¯æœ‰æ•ˆçš„UInt64
  for value in u64_values {
    assert_true(value >= 0UL)
