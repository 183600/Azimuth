  // æµ‹è¯•å„ç§HTTPæ–¹æ³•å’Œheader
  let http_methods = ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
  let header_values = [
    [("Content-Type", "application/json; charset=utf-8")],
    [("Authorization", "Bearer token123")],
