test "complex_calculation_sequence" {
  // æµ‹è¯•å¤æ‚è®¡ç®—åºåˆ—
  // è®¡ç®—: ((a + b) * c) + (d * e)
  let a = 10
  let b = 20
  let c = 3
  let d = 4
  let e = 5
  
  let step1 = @azimuth.add(a, b)      // 30
  let step2 = @azimuth.multiply(step1, c)  // 90
  let step3 = @azimuth.multiply(d, e)      // 20
  let result = @azimuth.add(step2, step3)  // 110
  
  @azimuth.assert_eq(110, result)
}

